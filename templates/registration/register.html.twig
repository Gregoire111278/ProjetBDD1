{% extends 'base.html.twig' %}
{% block head %}
{% endblock %}
{% block title %}Register{% endblock %}

{% block bread %}

{% endblock %}

{% block body %}
	<div class="overflow-y-hidden">
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="rounded-md p-2 border-red-300 bg-red-50 border dark:border-red-600 dark:bg-red-700 dark:text-white mb-4"
		     role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="	 flex h-screen items-center">
		<div class="bg-gray-700 w-5/12 h-screen ml-0">
			<img class="h-8 w-auto sm:h-10" src="{{ asset('build/images/unknown.png') }}" alt=""/>
		</div>
		<div class="mt-0 m-auto">
			<div class=" w-full flex content-center mx-auto">
				{{ form_start(registrationForm) }}

				<div class=" text-4xl text-center">
					Inscription
				</div>

				<div>
					{{ form_widget(registrationForm.userProfile.profileImage,{'attr':{'class':'hidden'}}) }}
					{{ form_label(registrationForm.email, 'Username (email) *', {'label_attr': {'class': 'block
					text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
					{{ form_widget(registrationForm.email, {'attr': {'class': ' shadow-sm border--gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
					{{ form_errors(registrationForm.email) }}
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					<div>
						{{ form_label(registrationForm.plainPassword.first, 'Password *', {'label_attr': {'class':
							'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
						{{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': ' shadow-sm border--gray-300 dark:border-transparent dark:text-gray-800 rounded-md border
							p-2 mt-1 mb-2'}}) }}
						{{ form_errors(registrationForm.plainPassword.first) }}
					</div>
					<div>
						{{ form_label(registrationForm.plainPassword.second, 'Repeated Password *', {'label_attr':
							{'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
						{{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': ' shadow-sm border--gray-300 dark:border-transparent dark:text-gray-800 rounded-md border
							p-2 mt-1 mb-2'}}) }}
						{{ form_errors(registrationForm.plainPassword.second) }}
					</div>
				</div>

				<br>

				<div class="w-9/12">
					{{ form_label(registrationForm.userProfile.name, 'Your Name :', {'label_attr': {'class': 'block
					text-sm
					text-gray-700 dark:text-gray-300 font-medium'}}) }}
					{{ form_widget(registrationForm.userProfile.name, {'attr': {'class': 'block w-full shadow-sm border-gray-300
					dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}

					{{ form_label(registrationForm.userProfile.bio, 'You bio :', {'label_attr': {'class': 'block
					text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
					{{ form_widget(registrationForm.userProfile.bio, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}


					{{ form_label(registrationForm.userProfile.websiteUrl, 'Your website URL :', {'label_attr':
						{'class':
							'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
					{{ form_widget(registrationForm.userProfile.websiteUrl, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800  rounded-md border p-2 mt-1 mb-2'}}) }}
				</div>


				<div class="grid grid-cols-1  md:grid-cols-2 gap-4">
					<div>
						{{ form_label(registrationForm.userProfile.company, 'Company :', {'label_attr': {'class':
							'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
						{{ form_widget(registrationForm.userProfile.company, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
					</div>

					<div>
						{{ form_label(registrationForm.userProfile.location, 'Location :', {'label_attr': {'class':
							'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
						{{ form_widget(registrationForm.userProfile.location, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
					</div>
				</div>

				{{ form_label(registrationForm.userProfile.dateOfBirth, 'Your date of birth :', {'label_attr':
					{'class':
						'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
				{{ form_widget(registrationForm.userProfile.dateOfBirth, {'attr': {'class': 'block l shadow-sm border-gray-300 dark:border-transparent
							dark:text-gray-800 bg-white rounded-md border p-1 mt-1 mb-1'}}) }}

				<div>
					<div class="flex items-center mt-2 mb-2">
						{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 rounded border-gray border text-indigo-300 mr-2'}}) }}
						{{ form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr': {'class': 'text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
					</div>
					<button type="submit"
					        class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
						Register
					</button>
				</div>

				<a href="{{ path('app_login') }}"> Already have an account? Login here</a>
				{{ form_end(registrationForm) }}

			</div>
		</div>
	</div>
	</div>
{% endblock %}