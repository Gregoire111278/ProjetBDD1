{% extends 'base.html.twig' %}


{% block bread %}
	->Post
{% endblock %}

{% block body %}

	<div class="flex  mb-4">

	</div>
	{{ include('/micro_post/_post.html.twig',{post:post}) }}
	<div class="mt-4 ">
		{% for comment in post.comments %}
			<div class="mx-auto w-8/12">
				<div class="  flex ">
					<div class="flex flex-row">
						{{ include('shared/_avatar.html.twig', {profile: app.user.userProfile, size:10},) }}
						<div class="flex flex-col">
							<div class="font-medium text-gray-800 dark:text-gray-300">{{ comment.author.email }}</div>
							<div class="font-light text-gray-500 dark:text-gray-500 ">{{ comment.created | date("M ,D,Y") }}</div>
						</div>
					</div>
				</div>
				<div class="flex">
					<div class="border border-gray-300 dark:border-gray-600 ml-4 mr-6 pb-8"></div>
					<div>{{ comment.text }}</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}

